@section scripts{
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            var currentPath = window.location.pathname; // Lấy đường dẫn trang hiện tại
            currentPath = "~/" + currentPath;
            // Lặp qua tất cả các liên kết có class "nav-link"
            $(".nav-link").each(function () {
                var linkPath = $(this).attr("href"); // Lấy đường dẫn từ thuộc tính "href" của liên kết

                // So sánh đường dẫn trang hiện tại với đường dẫn của liên kết
                if (currentPath === linkPath) {
                    $(this).addClass("active"); // Thêm lớp "active" vào liên kết nếu trang trùng khớp
                }
            });
        });
    </script>
}