@{
    Layout = null; // Không sử dụng layout
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>SB Admin 2 - Login</title>
    <!-- Custom fonts for this template-->
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="/css/sb-admin-2.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- CSS Files -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="assets/css/plugins.min.css">
    <link rel="stylesheet" href="assets/css/kaiadmin.min.css">

    <!-- CSS Just for demo purpose, don't include it in your project -->
    <link rel="stylesheet" href="assets/css/demo.css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <link rel="stylesheet" href="~/assets/css/kaiadmin.min.css" />
    <link rel="stylesheet" href="~/assets/css/plugins.min.css" />
    <link rel="stylesheet" href="~/assets/css/demo.css" />
</head>

<body data-background-color="dark">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-3">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image">
                                <img src="~/img/614ded2f761c1c21130cec53.png" />
                            </div>
                            <div class="col-lg-6 justify-content-center align-items-center">
                                <div class="p-4">
                                    <div class="text-center">
                                        <h1 class="text-warning mb-4 mt-5" style="font-size:40px !important">Chào mừng bạn quay trở lại!</h1>
                                    </div>
                                    @using (Html.BeginForm("Login", "User", FormMethod.Post, new { @class = "user" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-user bg-light text-black-50" id="exampleInputEmail" name="userName" aria-describedby="emailHelp" placeholder="Tên đăng nhập..." style="font-size:15px">
                                        </div>
                                        <div class="form-group">
                                            <input type="password" class="form-control form-control-user bg-light text-black-50" id="exampleInputPassword" name="password" placeholder="Mật khẩu..." style="font-size:15px">
                                        </div>
                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox small">
                                                <input type="checkbox" class="custom-control-input" id="customCheck">
                                                <label class="custom-control-label" for="customCheck">Ghi nhớ tôi</label>
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-warning btn-user btn-block" style="font-size:15px">Đăng nhập</button>
                                        <div class="text-center mt-2">
                                            @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
                {
                                                <div class="alert alert-success" role="alert">@ViewBag.SuccessMessage</div>
                                            }
                                            else if (!string.IsNullOrEmpty(ViewBag.FailMessage))
                                            {
                                                <div class="alert alert-danger" role="alert">@ViewBag.FailMessage</div>
                                            }
                                        </div>
                                        <hr>
                                    }
                                    <a href="#!" style="color:black;">Quên mật khẩu?</a>
                                    <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                        Chưa có tài khoản ? Liên hệ ngay
                                    </p>
                                    <a href="#!" class="text-muted">Terms of use.</a>
                                    <a href="#!" class="text-muted">Privacy policy</a>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>
    <script>
        $(document).ready(function () {
            $("form.user").submit(function (event) {
                // Ngăn chặn gửi form
                event.preventDefault();

                // Lấy giá trị của các trường input
                var userName = $("#exampleInputEmail").val();
                var password = $("#exampleInputPassword").val();

                // Kiểm tra xem các trường có dữ liệu không
                if (userName === '' && password === '') {
                    Swal.fire({
                        icon: 'error',
                        title: 'Lỗi',
                        text: 'Vui lòng nhập tên đăng nhập và mật khẩu!'
                    });
                }
                else if (userName === '') {
                    Swal.fire({
                        icon: 'error',
                        title: 'Lỗi',
                        text: 'Vui lòng nhập tên đăng nhập!'
                    });
                }
                else if (password === '') {
                    Swal.fire({
                        icon: 'error',
                        title: 'Lỗi',
                        text: 'Vui lòng nhập mật khẩu!'
                    });
                }
                else {
                    // Gửi form nếu dữ liệu hợp lệ
                    $("form.user").unbind("submit").submit();

                }
            });
        });
    </script>


</body>

</html>